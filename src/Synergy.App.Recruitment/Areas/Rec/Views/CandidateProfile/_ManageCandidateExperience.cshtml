<div style="margin-top: 5px;padding-left: 20px;padding-right: 20px;width: 100%;">

    <form asp-controller="CandidateProfile" asp-action="ManageCandidateExperience" method="post" class="form-horizontal">
        <div class="text-danger" asp-validation-summary="All" style="font-size:16px"></div>
        <div class="row" style="padding:10px;">

            <div class="col-12 pad-10">
                <div class="form-label-group">
                    <input asp-for="Employer" type="text" class="form-control" placeholder="Employer" autocomplete="off" style="width:80%;" required="required" />
                    <label for="Employer">Employer <span class="required">*</span></label>
                </div>
            </div>
            <div class="col-12 pad-10">
                <div class="form-label-group">
                    <input asp-for="Location" type="text" class="form-control" placeholder="Location" autocomplete="off" style="width:80%;" required="required" />
                    <label for="Location">Location <span class="required">*</span></label>
                </div>
            </div>
            <div class="col-12 pad-10">
                <div class="form-label-group">
                    <input asp-for="JobTitle" type="text" min="0" class="form-control" placeholder="Job Title" autocomplete="off" style="width:80%;" required="required" />
                    <label for="JobTitle">Job Title <span class="required">*</span></label>
                </div>
            </div>

            <div class="col-12 pad-10">
                <div class="form-label-group">
                    <div>
                        <label for="from">From <span class="required">*</span></label>
                    </div>
                    @(Html.Kendo().DatePickerFor(x=>x.From).Format("dd MMM yyyy").Events(m => m.Change("ToDateChange")).HtmlAttributes(new { @class = "form-control", style = "width: 80%", onkeydown = "javascript:return false;", @required="required" }))
                </div>
            </div>

            <div class="col-12 pad-10">
                <div class="form-label-group">
                    <div>
                        <label for="to">To <span class="required">*</span></label>
                    </div>
                    @(Html.Kendo().DatePickerFor(x=>x.To).Format("dd MMM yyyy").Events(m => m.Change("ToDateChange")).HtmlAttributes(new { @class = "form-control", style = "width: 80%", onkeydown = "javascript:return false;", @required = "required" }))
                </div>
            </div>
            <div class="col-12 pad-10">
                <div class="form-label-group">
                    <input asp-for="Duration" type="text" class="form-control" placeholder="Duration" autocomplete="off" style="width:80%;" readonly />
                    <label for="Duration">Duration </label>
                </div>
            </div>
            <div class="col-12 pad-10">
                <div class="form-label-group">
                    <div>
                        <label for="Responsibilities">Responsibilities </label>
                    </div>
                    <textarea asp-for="Responsibilities" class="form-control" placeholder="Responsibilities" autocomplete="off" style="width:80%; height:150px;"></textarea>
                    @*<label for="Responsibilities">Responsibilities</label>*@
                </div>
            </div>

            <div class="col-12">
                Attachment
                <div style="padding-top:10px;width:80%">
                    @(Html.Kendo().Upload().Multiple(false)
                        .Name("files")
                        .Async(a => a
                        .Save("SaveFile", "Document", new { @area = "cms" })
                        .AutoUpload(true)
                        )
                        .Events(e => e.Success("onExpFileUploadSuccess")
                                    )
                                    .Validation(validation => validation.AllowedExtensions(new string[] { ".gif", ".jpg", ".jpeg", ".png", ".pdf" }).MaxFileSize(2097152))
                                    .HtmlAttributes(new { @class = "hr-xx-large", @id = "fileExp" })
                    )

                    @if (Model.AttachmentId != null)
                    {
                        @*<a href="/cms/content/getbackgroundimage?id=@Model.AttachmentId" target="_blank">Attachment</a>*@
                        <a href="/cms/Document/GetFileMongo?fileId=@Model.AttachmentId" target="_blank">Attachment</a>
                    }
                </div>
            </div>
            <div class="col-12 pad-15">
                &nbsp;
            </div>

            <div class="cms-slidebar-footer">
                <input type="button" class="btn btn-light" value="Close" onclick="closeNavCandExp()" />
                <input type="submit" class="btn btn-primary" value="Save" onclick="OnSave(event)" />
            </div>

        </div>
        @Html.HiddenFor(x => x.Id)
        @Html.HiddenFor(x => x.DataAction)
        @Html.HiddenFor(x => x.CandidateProfileId)
        @Html.HiddenFor(x => x.AttachmentId)
        @Html.HiddenFor(x => x.IsLatest)
    </form>
</div>



    function SetFilterByStatus(ownerType, status) {
        var title = "";
        switch (ownerType) {
            case "@NtsActiveUserTypeEnum.OwnerOrRequester":
                title = "Created/Requested By Me";
                break;
            case "@NtsActiveUserTypeEnum.SharedBy":
                title = "Shared By Me";
                break;
              case "@NtsActiveUserTypeEnum.SharedWith":
                title = "Shared With Me";
                break;
            default:
        }
        $('.filter-by').find('b').html(title);
        if (status === null) {
            $('.filter-status').hide();
        }
        else {
            var s = "";
            var c = "";
            if (status ==="SERVICE_STATUS_DRAFT") {
                s = "Draft";
                c = "text-draft";
            }
            else if (status === "SERVICE_STATUS_INPROGRESS,SERVICE_STATUS_OVERDUE") {
                s = "In Progress/ Overdue";
                c = "text-inprogress";
            }
            else if (status === "SERVICE_STATUS_COMPLETE") {
                s = "Completed";
                c = "text-completed";
            }
            else if (status === "SERVICE_STATUS_REJECT,SERVICE_STATUS_CANCEL") {
                s = "Rejected/ Canceled";
                c = "text-rejected";
            }
            $('.filter-status').show();
            $('.filter-status').find('b').html(s);
            $('.filter-status').find('b').removeClass();
            $('.filter-status').find('b').addClass('pl-1 pr-1 ' + c);
        }
    }

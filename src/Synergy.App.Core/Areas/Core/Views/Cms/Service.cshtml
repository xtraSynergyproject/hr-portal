@using Synergy.App.ViewModel;
@using Synergy.App.Common;
@model ServiceTemplateViewModel;
@{
    Layout = ViewBag.Layout;
}
@if (Model.ViewType == NtsViewTypeEnum.Book && Model.DataAction == DataActionEnum.View && Model.ViewMode != NtsViewTypeEnum.Book)
{
    await Html.RenderPartialAsync("ServiceBook.cshtml", Model);
}
else if (Model.ViewType == NtsViewTypeEnum.Classic)
{
    await Html.RenderPartialAsync("ServiceDefault.cshtml", Model);
}
else if (Model.ViewType == NtsViewTypeEnum.Email)
{
    await Html.RenderPartialAsync("ServiceEmail.cshtml", Model);
}
else
{
    await Html.RenderPartialAsync("ServiceLight.cshtml", Model);
}
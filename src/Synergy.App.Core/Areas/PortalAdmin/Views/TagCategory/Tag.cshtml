<script>
    $(document).ready(function () {

        getTageData();

    });

    var columnDefs = [
        {
            headerName: "Actions",
            field: "Id",
            cellRenderer: params => {
                return "<div class='btn-group grid-menu' id='tree-menuTag' data-idvalue='" + params.value + "' data-noteid=\"#:NoteId#\" ><i class='fas fa-ellipsis-v'></i></div>"
            }
        },
        { headerName: "Tag Name", field: "NoteSubject", },

    ];

    function getTageData() {
        var noteId = '@Model.NoteId';
        document.getElementById("kgrdTag").innerHTML = "";
        gridConfig(
            "kgrdTag",
            "/portalAdmin/TagCategory/ReadTagData?TagCategoryId=" + noteId,
            columnDefs,
            false,
            true,
            true,
            true,
            1,
            true,
            10);
    }

    $(function () {

        $.contextMenu('update');
        $('.context-menu-list').trigger('contextmenu:refresh');

        $.contextMenu({
            selector: '#tree-menuTag',
            trigger: 'left',
            build: function ($trigger, e) {

                var id = $trigger.data('idvalue');
                var noteId = $trigger.data('noteid');

                switch (0) {
                    case 0:
                        return {
                            callback: function (key, options) {
                                switch (key) {
                                    case 'edit':
                                        onEditOnCreateTag(id, noteId);
                                        break;

                                    case 'delete':
                                        OnDeleteTag(id);
                                        break;

                                    default:
                                }
                            },
                            items: {
                                "edit": { name: "Edit", icon: "fas fa-edit" },
                                "delete": { name: "Delete", icon: "fas fa-trash" },
                            }
                        };
                }
            }
        });
    });


    function OnCreateTag() {
       // var dataItem = this.dataItem($(e.currentTarget).closest("tr"));
        var noteid = '@Model.NoteId';
        var win = GetMainWindow();
        win.iframeOpenUrl = "/PortalAdmin/TagCategory/TagCreate?TagCategoryId=" + noteid;
        win.OpenWindow({ Title: 'Create Tag', Width: 450, Height: 700 });
        return false;
    }
    function onEditOnCreateTag(id,noteId) {

       // e.preventDefault();
       // var dataItem = this.dataItem($(e.currentTarget).closest("tr"));
        var noteid = noteId;
        var win = GetMainWindow();
        //var portalId = $('#GlobalPortalId').val();
        //var TagCategoryId = $('#hiddenCategoryid').val();

        win.iframeOpenUrl = "/PortalAdmin/TagCategory/TagCreate?TagId=" + id+ "&TagCategoryId=" + noteid;
        win.OpenWindow({ Title: 'Edit Tag', Width: 450, Height: 700 });
    }



    function OnAfterTagCreate() {

        $("#kgrdTag").data("kendoGrid").dataSource.read({ TagCategoryId: '@Model.NoteId' });
    }
    function OnDeleteTag(id) {
        var flag = confirm('Do you really want to delete the Tag?');
        //alert("..Delete");
        //e.preventDefault();
        //var dataItem = this.dataItem($(e.currentTarget).closest("tr"));

        if (flag) {
            $.ajax({
                url: '@Url.Action("DeleteTags", "TagCategory", new { @area= "PortalAdmin" })?Id=' + id ,
                type: 'POST',
                data: {},
                dataType: 'json',
                success: function (result) {
                    //
                    if (result.success) {
                        getTageData();
                        //$("#kgrdTag").data("kendoGrid").dataSource.read();
                        kendo.alert("Tag Deleted Successfully.");
                    } else {
                        getTageData();
                       // $("#kgrdTag").data("kendoGrid").dataSource.read();
                        var err = result.errors.BinderCountError.errors[0];
                        kendo.alert(err);
                    }
                },
                error: function (ert) {
                    getTageData();
                    //$("#kgrdTag").data("kendoGrid").dataSource.read();
                }
            });
            return false;
        }
    }







</script>



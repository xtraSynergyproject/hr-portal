@using Synergy.App.ViewModel;
@using Synergy.App.Common;

@model ModuleViewModel

@{
    ViewData["Title"] = "Module";
    Layout = null;
}


<script>
    var columnDefs = []
     $(document).ready(function () {
         $.ajax({
             type: "GET",
             url: "/Cms/Module/GetColumnName",
             success: function (response) {
                
                 for (var i = 0; i < response.length; i++) {
                     var obj = { field: response[i].Name };
                     columnDefs.push(obj);
                 }
            },
            error: function (response) {
                alert("error");
            },
         });
         
    });
    var status = '@Html.Raw(EnumExtension.EnumToJson(typeof(StatusEnum)))';
    var statusObj = JSON.parse(status);

    //var columnDefs = [
    //    {
    //        field: "Name",
    //    },
    //    { field: "ShortName" },
    //    { field: "Prefix" },
    //    {
    //        field: "Status",
    //        cellRenderer: params => {
    //            return statusObj[params.value]; //only for enum
    //        }
    //    },
    //    {
    //        headerName: "Actions",
    //        field: "Id",

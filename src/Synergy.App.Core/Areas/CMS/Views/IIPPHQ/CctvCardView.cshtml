<div id="cctv" class="tab-pane pad-10 active">
    <div class="row">  
        <div class="col-12" @*style="padding:0 30px"*@>
            <div id="listview_cctv">
                @{

                   var i = 0;
                }
                @foreach (var api in ViewBag.CameraList)
                {                   
                    <div class="footage">
                        <div class="card">
                            <div class="card-header">
                                @api.City - @api.Location - @api.NoteSubject
                            </div>

                            <div class="card-block">
                                @if(i==0){
                                    <iframe id="@api.Id" src="/Cms/BusinessAnalytics/Streaming?rtspLink=@api.RtspLink.Replace("&", "^")&id=@api.Id" style="width:100%;height:220px;"></iframe>
                                }
                                else{
                                    <iframe id="@api.Id" src="/Cms/BusinessAnalytics/Streaming?rtspLink=@api.RtspLink.Replace("&", "^")&id=@api.Id&serverId=@i" style="width:100%;height:220px;"></iframe>

                                }
                            </div>
                        </div>
                    </div>
                    @if(i<4){
                        i++;
                    }
                    else{
                        i = 0;
                    }
                }

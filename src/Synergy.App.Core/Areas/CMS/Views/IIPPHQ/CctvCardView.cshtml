    }

    #listview_cctv {
        padding: 10px 5px;
        margin-bottom: -1px;
        min-height: 510px;
        /* Avoid cutout if font or line is bigger */
        font: inherit;
        border: none;
    }

    .k-listview-content {
        overflow: hidden;
    }

    #listview_cctv .card {

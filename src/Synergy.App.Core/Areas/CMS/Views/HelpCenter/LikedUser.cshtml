@using Synergy.App.ViewModel
@using Synergy.App.Common
@model PostMessageViewModel
@inject Synergy.App.Common.IUserContext _userContext


@{
    ViewData["Title"] = "Liked Users";
    Layout = "~/Areas/Core/Views/Shared/themes/looper/_layout.cshtml";
}

<script type="text/x-kendo-tmpl" id="templateanmt">
    <div class="announcement">
        <div class="iconwithtextan" style="padding-left: 10px;">
            <img width="40" height="40" src="@Url.Content("~/Images/likecounticon.png")" style="min-width:40px; min-height:40px; align-content:initial">
            <div style="font-size: 10px; padding-left: 10px;"></div>
            <div style="font-size: 16px">#=Name#</div>
        </div>

    </div>
</script>

<script>
    onload();

    function onload() {
        var dataSource = new kendo.data.DataSource({
            transport: {
                read: {
                    url: "/cms/helpCenter/ReadUserGuideData",
                    dataType: "json"
                }
            },
        });

        $("#mainList").kendoListView({
            dataSource: dataSource,
            template: kendo.template($("#templateanmt").html()),

        });
    }

</script>
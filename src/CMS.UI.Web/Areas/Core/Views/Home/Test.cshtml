@model Synergy.App.ViewModel.IdNameViewModel
@{
    Layout = "/Views/Shared/_Reference.cshtml";
}
@{
    ViewData["Title"] = "Home";
}


<div style="padding:20px;">
    <div>
        Dear Support Team,
    </div>
    <div>
        &nbsp; &nbsp; &nbsp;A new demo request has been raise by a customer with following details
    </div>
    <br/>
    <table style="border-collapse: collapse; font-size: 0.9em; font-family: sans-serif; border: 1px solid #006699; ">
        <thead>
            <tr style="background-color: #006699; color: #ffffff; text-align: left; border: 1px solid #006699; ">
                <th style="padding: 10px;">Item</th>
                <th style="padding: 10px;">Value</th>
            </tr>
        </thead>
        <tbody>
            <tr style="border-bottom: 1px solid #006699; ">
                <td style="padding: 10px;">First Name</td>
                <td style="padding: 10px;">{{FirstName}}</td>
            </tr>
            <tr style="border-bottom: 1px solid #006699; ">
                <td style="padding: 10px;">Last Name</td>
                <td style="padding: 10px;">{{LastName}}</td>
            </tr>
            <tr style="border-bottom: 1px solid #006699; ">
                <td style="padding: 10px;">Contact Number</td>
                <td style="padding: 10px;">{{ContactNumber}}</td>
            </tr>
            <tr style="border-bottom: 1px solid #006699; ">
                <td style="padding: 10px;">Country</td>
                <td style="padding: 10px;">{{Country}}</td>
            </tr>
            <tr style="border-bottom: 1px solid #006699; ">
                <td style="padding: 10px;">Number Of Employees</td>
                <td style="padding: 10px;">{{NumberOfEmployees}}</td>
            </tr>
            <tr style="border-bottom: 1px solid #006699; ">
                <td style="padding: 10px;">Product Intrested</td>
                <td style="padding: 10px;">{{ProductIntrested}}</td>
            </tr>
            <tr style="border-bottom: 1px solid #006699; ">
                <td style="padding: 10px;">Company Name</td>
                <td style="padding: 10px;">{{CompanyName}}</td>
            </tr>
            <tr style="border-bottom: 1px solid #006699; ">
                <td style="padding: 10px;">Job Title</td>
                <td style="padding: 10px;">{{JobTitle}}</td>
            </tr>
            <tr style="border-bottom: 1px solid #006699;">
                <td style="padding: 10px;">Message</td>
                <td style="padding: 10px;">{{Message}}</td>
            </tr>
        </tbody>
    </table>
</div>



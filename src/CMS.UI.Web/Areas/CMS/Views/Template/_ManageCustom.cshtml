    function OnCustomTemplateTypeChange() {
        var customddl = $("#CustomTemplateType").val();    
        if (customddl == '@CustomTemplateTypeEnum.Default') {
            LOVDetailsHide();
            $('#dashboardDll').hide();
            $('#websiteDll').hide();

        } else if (customddl == '@CustomTemplateTypeEnum.Dashboard') {
            $("#ActionName").val("onEditGridStackItem");
            $("#ControllerName").val("BusinessAnalytics");
            $("#AreaName").val("Cms");
            $('#dashboardDll').show();
            $('#websiteDll').hide();

        } else if (customddl == '@CustomTemplateTypeEnum.LOV') {
            LOVDetailsShow();
            $('#dashboardDll').hide();
            $('#websiteDll').hide();
        }
         else if (customddl == '@CustomTemplateTypeEnum.SynergyWebsite') {
            $("#ActionName").val("Render");
            $("#ControllerName").val("Editor");
            $("#AreaName").val("Cms");
            $('#websiteDll').show();
            $('#dashboardDll').hide();
        }
        else if (customddl == '@CustomTemplateTypeEnum.Iframe') {
            $("#ActionName").val("LoadIframePage");
            $("#ControllerName").val("BusinessAnalytics");
            $("#AreaName").val("Cms");
            $('#websiteDll').hide();
            $('#dashboardDll').hide();
        }
        return false;
    }

@using Synergy.App.ViewModel;
@using Synergy.App.Common;
@{
    ViewData["Title"] = "Kanban Board";
    Layout = null;
}
<script>

    var columnDefs = [
        {
            field: "NoteSubject",
            headerName:'Name'
        },
        {
            field: "boards",
            headerName: 'Boards'
        },
        {
            headerName: "Actions",
            field: "Id",
            cellRenderer: params => {
                return "<div class='btn-group grid-menu' id='tree-menuBinNtsGroup' data-idvalue='" + params.value + "' data-status=\"0\" data-noteid=\"#:NoteId#\" ><i class='fas fa-ellipsis-v'></i></div>"
            }
        }
    ];

    $(function () {

        getDataGridKanbanBoard();

        $.contextMenu({
            selector: '#tree-menuBinNtsGroup',
            trigger: 'left',
            build: function ($trigger, e) {


                var id = $trigger.data('idvalue');

                //var portalName = $trigger.data('portal-name');

                switch (0) {
                    case 0:
                        return {
                            callback: function (key, options) {
                                switch (key) {
                                    case 'edit':
                                        onEdit(id);
                                        break;

                                    case 'delete':
                                        OnDelete(id);
                                        break;

                                    default:
                                }
                            },
                            items: {
                                "edit": { name: "Edit", icon: "fas fa-edit" },
                                "delete": { name: "Delete", icon: "fas fa-trash" },


                            }
                        };


                }
            }
        });


    });
    function OnCreate() {

        @*var win = GetMainWindow();
        win.iframeOpenUrl =  '@Url.Action("JKanBan", "BusinessAnalytics", new { @area="Cms"})?dataAction=@DataActionEnum.Create';
        win.OpenWindow({ Title: 'Manage Kanban', Width: 1000, Height: 600 });
        return false;*@
        var win = GetMainWindow();
        win.iframeOpenUrl =  '@Url.Action("KanbanBoardTemplate", "Workboard", new { @area="Cms"})';
        win.OpenWindow({ Title: 'Select Kanban Template', Width: 600, Height: 400});
        return false;

    }
    function onEdit(id) {
        var win = GetMainWindow();
        win.iframeOpenUrl =  '@Url.Action("JKanBan", "Workboard", new { @area="Cms"})?id=' + id +'&dataAction=@DataActionEnum.Edit';
        win.OpenWindow({ Title: 'Manage Kanban',Width: 1200, Height: 1200 });
        return false;        
    }

    function OnDelete(id) {
        var flag = confirm('Do you really want to delete?');

        if (flag) {
            $.ajax({
                url:'@Url.Action("DeleteNote", "NtsNote", new { @area= "Cms" })?Id=' + id,
                type: 'POST',
                data: {},
                dataType: 'json',
                success: function (result) {
                    
                    if (result.success) {
                        getDataGridKanbanBoard();
                        kendo.alert("Deleted Successfully.");
                    } else {
                        getDataGridKanbanBoard();
                        var err = result.errors.BinderCountError.errors[0];
                        kendo.alert(err);
                    }
                },
                error: function (ert) {
                    getDataGridKanbanBoard();
                }
            });
            return false;
        }
    }

    function getDataGridKanbanBoard() {
        document.getElementById("KanbanBoardGrid").innerHTML = "";
       gridConfig(
           "KanbanBoardGrid",
           "/cms/Workboard/ReadKanbanBoard",
           columnDefs,
           false,
           true,
           true,
           true,
           1,
           true,
           10);
    }

</script>

<div>
    <h4>@ViewBag.Title</h4>

    <hr />


    <div class="row">
        <div class="col-12">
            <button type='button' class='btn btn-primary' onclick='OnCreate();'><i class='fa fas fa-plus'></i>&nbsp;Create Kanban Board</button>
            <br /><br />
            <div id="KanbanBoardGrid" style="width: 100%;height:550px" class="ag-theme-alpine"></div>
        </div>
    </div>
</div>













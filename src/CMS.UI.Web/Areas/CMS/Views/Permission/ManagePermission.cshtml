        .HtmlAttributes(new { @class = "form-control", @style = "width:80%" })
        )*@

                <input asp-for="Status" id="Status" class="form-control" style="width:80%" />

            </div>


            <div class="cms-slidebar-footer">
                <button type="button" class="btn btn-light" onclick="closeNavPermission();">Close</button>
                <input type="submit" class="btn btn-primary" value="Save" />
            </div>

        </div>
        @Html.HiddenFor(x => x.Id)
        @Html.HiddenFor(x => x.DataAction)
    </form>
</div>

<script type="text/javascript">

    $(document).ready(function () {
        if ('@ViewBag.Success' == "True") {
            closeNavPermission();
            //if (window.parent.$("#gridPermission").data("kendoGrid").dataSource.read()) { }
            window.parent.getDataPermission();
        }

    
        $("#PageTypes").kendoMultiSelect({
            dataTextField: "Name",
            dataValueField: "Id",
            dataSource: new kendo.data.DataSource({
                transport: {
                    read: {
                        url: "/Home/GetEnumIdNameList?enumType=PageTypeEnum",
                        dataType: "json"
                    }
                },
            }),
            autoClose: false,
            placeholder: "Select page types...",
            value: @Html.Raw(JsonConvert.SerializeObject(Model.PageTypes)),
            valuePrimitive: true,
            serverFiltering: true,
        });



        $("#UserPermissionTypes").kendoMultiSelect({
            dataTextField: "Name",
            dataValueField: "Id",
            dataSource: new kendo.data.DataSource({
                transport: {
                    read: {
                        url: "/Home/GetEnumIdNameList?enumType=UserPermissionTypeEnum",
                        dataType: "json"
                    }
                },
            }),
            autoClose: false,
            placeholder: "Select user permission types...",
            value: @Html.Raw(JsonConvert.SerializeObject(Model.UserPermissionTypes)),
            valuePrimitive: true,
            serverFiltering: true,
        });


         $("#Status").kendoDropDownList({
            dataTextField: "Name",
            dataValueField: "Id",
            optionLabel: "@ApplicationConstant.PlaceHolder_SelectOption",
            value:'@Model.Status.ToString()',
            dataSource: {
                transport: {
                    read: {
                        url: "/Home/GetEnumIdNameList?enumType=StatusEnum",
                    }
                }
            }
        });

    });

    function closeNavPermission() {
    
        var win = GetMainWindow();
        win.CloseWindow();
        return false;
    }

</script>


@using Synergy.App.Business;
@using Synergy.App.ViewModel;
@using Synergy.App.Common;
@using Newtonsoft.Json;

@{
    ViewData["Title"] = "Manage Permission";
    Layout = "/Views/Shared/_PopupLayout.cshtml";
}

@model PermissionViewModel
<style>
    .form-control {
        width: unset;
    }

    .required {
        color: red;
    }
</style>


<div class="row" style="margin-left:15px;">
    <form asp-controller="Permission" asp-action="ManagePermission" method="post" class="form-horizontal" id="myForm">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="row" style="padding:10px;">

            <div class="col-12 pad-10">
                <div class="form-label-group">
                    <input asp-for="Name" type="text" class="form-control" placeholder="Enter Name" required="required" autocomplete="off" style="width:80%" />
                    <label for="Name">Name <span class="required">*</span></label>
                </div>
            </div>

            <div class="col-12 pad-10">
                <div class="form-label-group">
                    <input asp-for="GroupName" type="text" class="form-control" placeholder="Enter Group Name" required="required" autocomplete="off" style="width:80%" />
                    <label for="GroupName">Group Name <span class="required">*</span></label>
                </div>
            </div>

            <div class="col-12 pad-10">
                <div class="form-label-group">
                    <input asp-for="Code" type="text" class="form-control" placeholder="Enter Code" required="required" autocomplete="off" style="width:80%" />
                    <label for="Code">Code <span class="required">*</span></label>
                </div>
            </div>

            <div class="col-12 pad-10">
                <div class="form-label-group">

                    <input asp-for="SequenceOrder" type="number" class="form-control" placeholder="Enter Sequence Order" autocomplete="off" style="width:80%" />
                    <label for="SequenceOrder">Enter Sequence Order</label>
                </div>
            </div>

            <div class="col-12">Page Types <span class="required">*</span></div>
            <div class="col-12 pad-15">
                @*@(Html.Kendo().MultiSelectFor(model=>model.PageTypes)
        .AutoClose(true)
        .Placeholder("Select page types...")
        .DataSource(source =>
        {
            source.Read(read =>
            {
                read.Action("GetEnumIdNameList", "Home", new { @area = "", enumType = "PageTypeEnum" });
            });
        })
        .DataTextField("Name")
        .DataValueField("Id")
        .AutoBind(true)
        .HtmlAttributes(new { @class = "hr-xx-large", @style = "width:80%"})
        .Height(300)
        )*@
                @*<input asp-for="PageTypes" id="PageTypes" style="width:80%" />*@

                <select asp-for="PageTypes" id="PageTypes" data-placeholder="Select page types..." style="width:80%"></select>

            </div>

            <div class="col-12">User Permission Types <span class="required">*</span></div>
            <div class="col-12 pad-15">
                @*@(Html.Kendo().MultiSelectFor(model => model.UserPermissionTypes)
                    .AutoClose(true)
                    .Placeholder("Select user permission types...")
                    .DataSource(source =>
                    {
                        source.Read(read =>
                        {
                            read.Action("GetEnumIdNameList", "Home", new { @area = "", enumType = "UserPermissionTypeEnum" });
                        });
                    })
                    .DataTextField("Name")
                    .DataValueField("Id")
                    .AutoBind(true)
                    .HtmlAttributes(new { @class = "hr-xx-large", @style = "width:80%"})
                    .Height(300)
                    )*@

                <select asp-for="UserPermissionTypes" id="UserPermissionTypes" data-placeholder="Select user permission types..." style="width:80%"></select>

            </div>

            <div class="col-12">Status</div>
            <div class="col-12 pad-15">
                @*@(Html.Kendo().DropDownListFor(x=>x.Status)
        .DataTextField("Name")
        .DataValueField("Id")
        .DataSource(source =>
        {
        source.Read(read =>
        {
            read.Action("GetEnumIdNameList", "Home", new { @area = "", enumType = "StatusEnum" });
        });
        })

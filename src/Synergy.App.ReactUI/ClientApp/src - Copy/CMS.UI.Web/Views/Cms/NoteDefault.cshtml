    var onAjaxSuccess = function (res) {
        if (res.success) {
            ShowNotification(res.msg, 'success');
            if (res.mode === 'Popup') {
                var win = GetMainWindow();
                var cb = null;
                if (res.cbm !== null && res.cbm !== undefined && res.cbm !== '') {
                    cb = { MethodName: res.cbm, Prms: res.vm };
                }
                win.CloseWindow(cb);
                return false;
            }
            if (res.mode === 'Iframe') {
                if (res.cbm !== null && res.cbm !== undefined && res.cbm !== '') {
                    window.parent[res.cbm](res.vm);
                    return false;
                }



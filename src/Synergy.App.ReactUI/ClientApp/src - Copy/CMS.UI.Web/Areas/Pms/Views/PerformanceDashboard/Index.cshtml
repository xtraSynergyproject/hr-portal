<script>

    $(document).ready(function () {
        debugger;
        HideLoader($("#global-overlay"));
        if ("@Model.PageName" == "ProjectTaskByDate")
        {
            if (window.parent == "" || window.parent == undefined) {
                LoadPartailView1("/pjm/ProjectTask/ProjectTaskByDate?ProjectId=@Model.Id", 'Project-content');
            } else {
                window.parent.LoadPartailView1("/pjm/ProjectTask/ProjectTaskByDate?ProjectId=@Model.Id", 'Project-content');
            }
        }
        else if ("@Model.PageName" == "SubordinatesTasks")
        {
            if (window.parent == "" || window.parent == undefined) {
               LoadPartailView1("/pjm/ProjectTask/ProjectTaskByName?ProjectId=@Model.Id", 'Project-content');
            } else {
               window.parent.LoadPartailView1("/pjm/ProjectTask/ProjectTaskByName?ProjectId=@Model.Id", 'Project-content');
            }
        }
        else if ("@Model.PageName" ==  "ManagePerformance")
        {
             if (window.parent == "" || window.parent == undefined) {
                 LoadPartailView1("/pms/PerformanceTask/PerformanceTaskView?ProjectId=@Model.Id", 'Project-content');
            } else {
                 window.parent.LoadPartailView1("/pms/PerformanceTask/PerformanceTaskView?ProjectId=@Model.Id", 'Project-content');
            }
        }
           else  if ("@Model.PageName" == "MyPerformance")
        {
            if (window.parent == "" || window.parent == undefined) {
                LoadPartailView1("/pms/PerformanceDashboard/PerformanceDashboard?performanceId=@Model.Id", 'Project-content');
            } else {
                window.parent.LoadPartailView1("/pms/PerformanceDashboard/PerformanceDashboard?performanceId=@Model.Id", 'Project-content');
            }
        }
        else if ("@Model.PageName" == "PerformanceSchedule")
        {
             if (window.parent == "" || window.parent == undefined) {
                 LoadPartailView1("/pms/PerformanceTask/PerformanceCalendarView?ProjectId=@Model.Id&stageId=@Model.StageId", 'Project-content');
            } else {
                 window.parent.LoadPartailView1("/pms/PerformanceTask/PerformanceCalendarView?ProjectId=@Model.Id&stageId=@Model.StageId", 'Project-content');
            }
        }
        else  if ("@Model.PageName" == "WorkBreakDownStructure")
        {
             if (window.parent == "" || window.parent == undefined) {
                 LoadPartailView1("/pms/Performance/PerformanceWorkBreakDownStructure?performanceId=@Model.Id", 'Project-content');
            } else {
                 window.parent.LoadPartailView1("/pms/Performance/PerformanceWorkBreakDownStructure?performanceId=@Model.Id", 'Project-content');
            }
        }
        else  if ("@Model.PageName" == "PerformanceDiagram")
        {
             if (window.parent == "" || window.parent == undefined) {
                 LoadPartailView1("/pms/PerformanceDiagram/Index", 'Project-content');
            } else {
              window.parent.LoadPartailView1("/pms/PerformanceDiagram/Index", 'Project-content');
            }
        }
        else  if ("@Model.PageName" == "PerformanceResult")
        {
             if (window.parent == "" || window.parent == undefined) {
                 LoadPartailView1("/pms/PerformanceDashboard/PerformanceResult?pageName=@Model.PageName&ProjectId=@Model.Id", 'Project-content');
            } else {
                 window.parent.LoadPartailView1("/pms/PerformanceDashboard/PerformanceResult?pageName=@Model.PageName&ProjectId=@Model.Id", 'Project-content');
            }
        }

        if (window.parent == "" || window.parent == undefined && ("@Model.PageName" != "PerformanceDiagram")) {
            LoadPartailView1("/pms/PerformanceDashboard/PerformanceDetailsBanner?ProjectId=@Model.Id&pageName=@Model.PageName", 'ProjectBanner');
            } else {
            window.parent.LoadPartailView1("/pms/PerformanceDashboard/PerformanceDetailsBanner?ProjectId=@Model.Id&pageName=@Model.PageName", 'ProjectBanner');
            }
    });

</script>

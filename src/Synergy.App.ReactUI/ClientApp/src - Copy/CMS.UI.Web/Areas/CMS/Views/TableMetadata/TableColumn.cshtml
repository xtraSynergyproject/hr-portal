@using CMS.UI.ViewModel;
@model ColumnMetadataViewModel;
@{
    ViewData["Title"] = "Table Column Metadata";
    Layout = null;
}
<style>
    .kgrdColumnMetadataStyle {
        width: 100% !important;
    }
</style>
<script>
    var columnDefs = [
        {
            field: "Name",
        },
        { field: "LabelName" },
        { field: "DataType" },
        {
            headerName: "Actions",
            field: "Id",
            cellRenderer: params => {
                return "<div class='btn-group grid-menu' id='tree-menuBin' data-idvalue='" + params.value + "' data-status=\"0\" data-noteid=\"#:NoteId#\" ><i class='fas fa-ellipsis-v'></i></div>"
            }
        }
    ];

    $(function () {
        getData();
        $.contextMenu('update');
        $('.context-menu-list').trigger('contextmenu:refresh');
    });

    function onEdit(id) {
        var win = GetMainWindow();
        win.iframeOpenUrl =  '@Url.Action("EditColumnMetadata", "TableMetadata", new { @area="Cms"})?Id=' + id;
        win.OpenWindow({ Title: 'Manage column', Width: 600, Height: 600 });
        return false;
    }

    function OnDelete(id) {
        var flag = confirm('Do you really want to delete the column?');

        if (flag) {
            $.ajax({
                url: '@Url.Action("DeleteColumnMetadata", "TableMetadata", new { @area="Cms"})?Id=' + id,
                type: 'POST',
                data: {},
                dataType: 'json',
                success: function (result) {
                    debugger;
                    if (result.success) {
                        getData();
                        kendo.alert("Deleted Successfully.");
                    } else {
                        getData();
                        var err = result.errors.BinderCountError.errors[0];
                        kendo.alert(err);
                    }
                },
                error: function (ert) {
                    getData();
                }
            });
            return false;
        }
    }

   function getData() {
       document.getElementById("myGridColumn").innerHTML = "";
       gridConfig(
           "myGridColumn",
           "@Url.Action("ReadColumnMetadata", "TableMetadata", new { @area="Cms", @tableMetadataId=Model.TableMetadataId })",
           columnDefs,
           false,
           true,
           true,
           true,
           1,
           true,
           10);
    }

</script>

<div>
    <div class="row pad-t-b-10">
        <div class="col-8"><h3>@ViewBag.Title : @Model.TableMetadataName</h3></div>
        <div class="col-4" style="text-align:right;"><input type="button" class="btn btn-primary" value="Back to Table Metadata" onclick="onBackTableMetadata();" /></div>
    </div>
    <div class="row">
        <div class="col-12">
            <button type='button' class='btn btn-primary' onclick="OnCreateColumn('@Model.TableMetadataId');"><i class='fa fas fa-plus'></i>&nbsp; Create New Column</button>
            <br /><br />
            <div id="myGridColumn" style="width: 100%;height:550px" class="ag-theme-alpine"></div>
        </div>
    </div>
</div>
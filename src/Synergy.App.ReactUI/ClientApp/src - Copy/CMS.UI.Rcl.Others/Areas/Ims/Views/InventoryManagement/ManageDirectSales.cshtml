<div class="row" style="margin:10px;margin-bottom:60px;">

    <form asp-controller="InventoryManagement" asp-action="ManageDirectSales" class="form-horizontal"  data-ajax-begin="onAjaxBegin" data-ajax-complete="onAjaxComplete"
          data-ajax-failure="onAjaxFailed" data-ajax-success="onAjaxSuccess"
          data-ajax="true" data-ajax-method="POST">
        <div class="text-danger" asp-validation-summary="All"></div>

        <fieldset>
            <legend style="margin-bottom:0px;">Customer Information</legend>
            <div class="card pad-10" style="padding-top:0px;">

                <div class="row col-12" style="padding:10px;">
                    <div class="col-3" style="padding-bottom:10px;">
                        <label>Customer<span class="required">*</span></label>
                    </div>
                    <div class="col-9" style="padding-bottom:10px;">
                        <input type="text" asp-for="Customer" id="Customer" class="form-control" required/>
                    </div>
                    <div class="col-3" style="padding-bottom:10px;">
                        <label>Contact Person</label>
                    </div>
                    <div class="col-3" style="padding-bottom:10px;">
                        <input type="text" asp-for="ContactPerson" id="ContactPerson" class="form-control" />
                    </div>
                    <div class="col-3" style="padding-bottom:10px;">
                        <label>Designation</label>
                    </div>
                    <div class="col-3" style="padding-bottom:10px;">
                        <input type="text" asp-for="Designation" class="form-control" />
                    </div>
                    <div class="col-3" style="padding-bottom:10px;">
                        <label>Mobile No</label>
                    </div>
                    <div class="col-3" style="padding-bottom:10px;">
                        <input type="text" asp-for="MobileNo" class="form-control" />
                    </div>
                    <div class="col-3" style="padding-bottom:10px;">
                        <label>Contact No</label>
                    </div>
                    <div class="col-3" style="padding-bottom:10px;">
                        <input type="text" asp-for="ContactNo" class="form-control" />
                    </div>
                    <div class="col-3" style="padding-bottom:10px;">
                        <label>Email Id</label>
                    </div>
                    <div class="col-3" style="padding-bottom:10px;">
                        <input type="text" asp-for="EmailId" class="form-control" />
                    </div>
                    <div class="col-3" style="padding-bottom:10px;">
                        <label>Customer GST No.</label>
                    </div>
                    <div class="col-3" style="padding-bottom:10px;">
                        <input type="text" asp-for="CustomerGSTNo" class="form-control" />
                    </div>
                    <div class="col-3" style="padding-bottom:10px;">
                        <label>Customer Ref. Number</label>
                    </div>
                    <div class="col-3" style="padding-bottom:10px;">
                        <input type="text" asp-for="CustomerRefNo" class="form-control" />
                    </div>
                    <div class="col-3" style="padding-bottom:10px;">
                        <label>Country<span class="required">*</span></label>
                    </div>
                    <div class="col-3" style="padding-bottom:10px;">
                        <input type="text" asp-for="Country" id="Country" class="form-control" required/>
                    </div>
                    <div class="col-3" style="padding-bottom:10px;">
                        <label>State<span class="required">*</span></label>
                    </div>
                    <div class="col-3" style="padding-bottom:10px;">
                        <input type="text" asp-for="State" id="State" class="form-control" required/>
                    </div>
                    <div class="col-3" style="padding-bottom:10px;">
                        <label>City<span class="required">*</span></label>
                    </div>
                    <div class="col-3" style="padding-bottom:10px;">
                        <input type="text" asp-for="City" id="City" class="form-control" required/>
                    </div>
                    <div class="col-3" style="padding-bottom:10px;">
                        <label>Shipping Address</label>
                    </div>
                    <div class="col-9" style="padding-bottom:10px;">
                        <textarea id="ShippingAddress" asp-for="ShippingAddress" class="form-control" style="width:100%!important"></textarea>
                    </div>
                </div>
            </div>
        </fieldset>
        &nbsp;
        &nbsp;
        <fieldset>
            <legend style="margin-bottom:0px;">Project Information</legend>
            <div class="card pad-10" style="padding-top:0px;">

                <div class="row col-12" style="padding:10px;">

                    <div class="col-3" style="padding-bottom:10px;">
                        <label>Proposal Type<span class="required">*</span></label>
                    </div>
                    <div class="col-3" style="padding-bottom:10px;">
                        <input type="text" asp-for="ProposalType" id="ProposalType" class="form-control" required/>
                    </div>
                    <div class="col-3" style="padding-bottom:10px;">
                        <label>Proposal Source<span class="required">*</span></label>
                    </div>
                    <div class="col-3" style="padding-bottom:10px;">
                        <input type="text" asp-for="ProposalSource" id="ProposalSource" class="form-control" required/>
                    </div>
                    <div class="col-3" style="padding-bottom:10px;">
                        <label>Next Follow-up Date</label>
                    </div>
                    <div class="col-3" style="padding-bottom:10px;">
                        <input type="text" asp-for="NextFollowUpDate" id="NextFollowUpDate" class="form-control" />
                    </div>
                    <div class="col-3" style="padding-bottom:10px;">
                        <label>Competition With<span class="required">*</span></label>
                    </div>
                    <div class="col-3" style="padding-bottom:10px;">
                        <input type="text" asp-for="CompetitionWith" class="form-control" required/>
                    </div>
                    <div class="col-3" style="padding-bottom:10px;">
                        <label>Summary<span class="required">*</span></label>
                    </div>
                    <div class="col-9" style="padding-bottom:10px;">
                        <textarea asp-for="Summary" class="form-control" style="width:100%!important" required></textarea>
                    </div>

                    <div class="col-3" style="padding-bottom:10px;">
                        <label>Proposal Date</label>
                    </div>
                    <div class="col-3" style="padding-bottom:10px;">
                        <input type="text" asp-for="ProposalDate" id="ProposalDate" class="form-control" />
                    </div>

                </div>
            </div>
        </fieldset>
        <div class="row pad-10" style="float:right;">
            <input type="submit" class="btn btn-primary" value="Save" style="margin:5px;" onclick="OnSubmit()"/>
            <input type="button" class="btn btn-primary" value="Close" style="margin:5px;" onclick="closeNav()"/>
        </div>
        @Html.HiddenFor(x => x.DataAction)
        @Html.HiddenFor(x => x.ServiceId)
    </form>
</div>


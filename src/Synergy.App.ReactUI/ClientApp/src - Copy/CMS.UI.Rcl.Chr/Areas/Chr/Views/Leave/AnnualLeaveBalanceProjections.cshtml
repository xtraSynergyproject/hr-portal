@inject IStringLocalizer<CMS.UI.Web.Areas.CHR.Controllers.HRDirectController> Resource
@using Kendo.Mvc.UI;
@using CMS.UI.ViewModel;
@using CMS.Common;
@model LeaveDetailViewModel
@{

    Layout = "/Views/Shared/_PopupLayout.cshtml";

}

<script>

    function ShowLoader(target) {
        // target.loadingOverlay();
        kendo.ui.progress(target, true);
    }
    function HideLoader(target) {
        //target.loadingOverlay('remove');
        kendo.ui.progress(target, false);
    }


     function OnGetBalance()
    {

         ShowLoader($('#appWrapper'));
        var date = $("#StartDate").val();
        var leavetype = '@Model.LeaveType';
        var user = '@Model.UserId';
        $.ajax({
            url: "/chr/leave/FutureAnnualLeaveBalance?date="+date+"&leaveTypeCode="+leavetype+"&userId="+user,
            type: 'GET',
            dataType: 'json',
            success: function (data) {
                if (data.success) {
                    $('#AnnualLeaveBalance').html(data.balance);
                    HideLoader($('#appWrapper'));
                    //alert("Leave Balance Successfully." + data.balance);
                }
                else {
                    var msg = ExtractError(data.errors);
                    ShowNotification(msg);
                    HideLoader($('#appWrapper'));
                }

            },
            error: function (ert) {
                alert('error');
                HideLoader($('#appWrapper'));
            }
        });
        return false;
    }

     $(document).ready(function () {
         $("#StartDate").kendoDatePicker({  value: "@Model.StartDate"});
        
    });
</script>
<div id="appWrapper" style="margin-left:50px;">

    <div class="row no-gutter hr-pad-top-15">
        <div class="form-group col-xs-10 col-sm-5">
            <div class="col-lg-3 label-div">
                @Resource["ProjectionDate"]
            </div>
            <div class="col-lg-9">
                @*@Html.Kendo().DatePickerFor(model => model.StartDate)*@
                <input id="StartDate" />
            </div>
        </div>
        <div class="form-group col-xs-12 col-sm-6">
            <div class="col-lg-3 label-div">
                @Resource["LeaveBalance"]
            </div>
            <div class="col-lg-9">
                <span id="AnnualLeaveBalance">
                    @Html.DisplayFor(m => m.LeaveBalance, new { id = "LeaveBalance" })
                </span>

            </div>
        </div>
    </div>
    <hr />
    <div class="row no-gutter">
        <div class="form-group col-xs-12 col-sm-6">
            <div class="col-lg-3 label-div">
                @*ERP.Translation.Message.Requiredfields*@ @*//Required fields*@
            </div>
            <div class="col-lg-9">
                <button class="k-button k-button-icontext k-primary" onclick="OnGetBalance();"> @Resource["GetBalance"]</button>
                @*<button class="k-button k-button-icontext k-primary" onclick="OnCancel();"> Cancel </button>*@
            </div>
        </div>

    </div>

</div>
<script type="text/javascript">
    function SelectItem(e) {
        var ds = this.dataSource.data();
        if (ds.length == 1) {
            this.select(1);
        }
    }
    function OnSuccess(response) {
        if (response.success) {
            window.parent.CloseTask(true, response.templateMasterId)
        }
        else {
            ShowErrors(response.errors);
        }
    }
    //function OnCancel(e) {
    //    window.parent.CloseTask(false);
    //}


    function ShowErrors(err) {
        $(".hr-v-summary").removeClass("validation-summary-valid");
        $(".hr-v-summary").addClass("validation-summary-errors");
        var msg = ExtractError(err);
        $(".hr-v-summary ul").html(msg);
    }




</script>




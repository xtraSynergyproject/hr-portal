pipeline {
    agent any 
    environment {
    DOCKERHUB_CREDENTIALS = credentials('privateregistrycredentials')
    }
    stages { 
        stage('Build docker api gateway image') {
                            steps {
                dir('src') {
                                script   {  
                                    sh 'docker build -t synergysolution/cms_synergy_apigateway:latest -f Dockerfile-ApiGateway .'
                            }
                            }
                        }
        }
        stage('login to dockerhub') {
            steps{
                sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
            }
        }
        stage('push image') {
            steps{
                sh 'docker push synergysolution/cms_synergy_apigateway:latest'
            }
        }
}
post {
        always {
            sh 'docker logout'
        }
    }
}
@{
    ViewData["Title"] = "Select Portal";
    Layout = "~/Areas/Core/Views/Shared/Themes/Looper/_Layout.cshtml";

}
@model List<PortalViewModel>
<style>
    .hide-side-menu {
        display: none !important;
    }

    .remove-pad-left {
        padding-left: 0px !important;
    }
</style>
<div id="appWrapper" class="wrapper">
    <div class="page">
        <div class="page-inner">
            <h6 style="width:100%" class="text-center">Choose an application from below list to proceed...</h6>
            <div class="row">
                @foreach (var item in Model)
                {
                    <a href="javascript:OnMenuPortalChange('@item.Id')" ref="javascript:" class="col-lg-2 col-md-3 col-sm-12">
                        <div class="card card-figure is-hoverable">
                            <figure class="figure">
                                <img class="img-fluid" src="/themes/looper/dist/assets/images/illustration/portalDefault.png" style="height:150px;" alt="Card image cap">
                                <figcaption class="figure-caption">
                                    <h6 class="figure-title text-center">@item.DisplayName</h6>
                                    <p class="text-muted mb-0"></p>
                                </figcaption>
                            </figure>
                        </div>
                    </a>
                }

            </div>
        </div>
    </div>
</div>

@*src="/cms/Document/GetImageMongo?id=@item.LogoId"*@

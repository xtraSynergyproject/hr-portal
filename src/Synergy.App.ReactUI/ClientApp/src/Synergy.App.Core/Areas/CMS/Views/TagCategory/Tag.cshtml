    function onEditOnCreateTag(id, noteid) {
        var win = GetMainWindow();
        win.iframeOpenUrl = "/cms/TagCategory/TagCreate?TagId=" + id + "&TagCategoryId=" + noteid;
        win.OpenWindow({ Title: 'Edit Tag', Width: 450, Height: 400 });
    }

    function OnAfterTagCreate() {
        getData();
    }

    function OnDeleteTag(id) {
        var flag = kendo.confirm('Do you really want to delete the Tag?');               

        if (flag) {
            $.ajax({
                url: '@Url.Action("DeleteTags", "TagCategory", new { @area="Cms"})?Id=' + id ,
                type: 'POST',
                data: {},
                dataType: 'json',
                success: function (result) {
                    //
                    if (result.success) {
                        getData();
                        ShowNotification("Tag Deleted Successfully","success");
                    } else {
                        getData();
                        var err = result.errors.BinderCountError.errors[0];
                        kendo.alert(err);
                    }
                },
                error: function (ert) {
                    //
                    getData();
                }
            });
            return false;
        }
    }



</style>
<script>
    function getPDF(selector) {

        kendo.drawing.drawDOM($(selector)).then(function (group) {
            kendo.drawing.pdf.saveAs(group, "ConfidentialityAgreement.pdf");
        });
    }
</script>
<body>

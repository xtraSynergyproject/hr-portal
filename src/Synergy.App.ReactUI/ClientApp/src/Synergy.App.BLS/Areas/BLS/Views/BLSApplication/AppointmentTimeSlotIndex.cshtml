@inject Microsoft.Extensions.Configuration.IConfiguration configuration
@inject IStringLocalizer<Synergy.App.BLS.Areas.Controllers.BLSApplicationController> Resource
@using Synergy.App.ViewModel;
@using Synergy.App.Common;
@using Microsoft.Extensions.Configuration;
@model JSCGrievanceWorkflow

@{
    ViewData["Title"] = "Appointment Time Slot";
    Layout = null;
}

<div id="appWrapper" class="wrapper">
    <div class="page">
        <div class="page-inner">

            <h4>@Resource["AppointmentTimeSlot"]</h4>
                    <hr />
                    <div class="row">
                        <div class="col-12">
                    <button type='button' class='btn btn-primary' onclick='OnCreate();'><i class='fa fas fa-plus'></i>&nbsp;@Resource["Create"]</button>
                            <br /><br />
                            @*<h5>Collector Ward Assignment List</h5><hr />*@
                            <div id="SlotGrid" style="width: 100%;height:550px" class="ag-theme-alpine"></div>
                        </div>
                    </div>
                
        </div>
    </div>>
</div>

<script>

    var columnDefs = [

        {
            headerName: "Actions",
            field: "Id",
            maxWidth: 140,

            cellRenderer: params => {
                return "<div class='btn-group grid-menu' id='actions' data-idvalue='" + params.value + "' ><i class='fas fa-ellipsis-v'></i></div>"
            }
        },
        //{
        //    field: "LocationName",
        //    headerName: "Location Name",
        //},
        {
            field: "Day",
            headerName: "Day",
        },
        {
            field: "SlotDuration",
            headerName: "Slot Duration",
        },
        ,
        {
            field: "NoOfCounter",
            headerName: "NoOfCounter",
        },
        

    ];

    $(function () {

        getSlotGridList();

        $.contextMenu({
            selector: '#actions',
            trigger: 'left',
            build: function ($trigger, e) {


                var id = $trigger.data('idvalue');

                switch (0) {
                    case 0:
                        return {
                            callback: function (key, options) {
                                switch (key) {
                                    case 'edit':
                                        onEdit(id);
                                        break;

                                    case 'delete':
                                        Delete(id);
                                        break;

                                    default:
                                }
                            },
                            items: {
                                "edit": { name: "Edit", icon: "fas fa-edit" },
                                "delete": { name: "Delete", icon: "fas fa-trash" },

                            }
                        };


                }
            }
        });


    });

    function getSlotGridList() {
        document.getElementById("SlotGrid").innerHTML = "";
        gridConfig(
            "SlotGrid",
            "/bls/BLSApplication/GetAppointmentTimeSlotList",
            columnDefs,
            false,
            true,
            true,
            true,
            1,
            true,
            10);
    }
</script>
<script>
    function OnCreate() {

        var url = "/bls/BLSApplication/AppointmentTimeSlot";
        var win = GetMainWindow();
        win.iframeOpenUrl = url;
        win.OpenWindow({ Title: 'Appointment Time Slot', Width: 1000, Height: 700  });
        return false;

    }

    function Delete(id) {
        var flag = confirm('Do you really want to delete the assignment?');

        if (flag) {
            $.ajax({
                url: '@Url.Action("DeleteWardCollector", "EGovernment", new { @area="EGov"})?id=' + id,
                type: 'POST',
                data: {},
                dataType: 'json',
                success: function (result) {
                    if (result.success) {
                        getSlotGridList();
                        ShowNotification("Deleted Successfully","success");
                    } else {
                        getSlotGridList();
                        var err = result.errors.BinderCountError.errors[0];
                        kendo.alert(err);
                    }
                },
                error: function (ert) {
                    getSlotGridList();
                }
            });
            return false;
        }
    }

    function onEdit(id) {
        var win = GetMainWindow();
        var url = "/bls/BLSApplication/AppointmentTimeSlot?id=" + id;
        win.iframeOpenUrl = url;
        win.OpenWindow({ Title: 'Appointment Time Slot', Width: 1000, Height: 700 });
        return false;
    }

    function onAfterAction() {
        getSlotGridList();
    }

</script>



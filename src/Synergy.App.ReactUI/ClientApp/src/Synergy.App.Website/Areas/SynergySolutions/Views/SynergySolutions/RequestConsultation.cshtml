                                                            @*<div class="mb-3">
                                                                    <div class="dropdown d-flex align-content-xl-around form-control" style="padding: 0px;">
                                                                        <button class="btn btn-block dropdown-toggle text-left text-secondary d-flex d-xl-flex justify-content-between align-items-center justify-content-sm-between justify-content-md-between justify-content-lg-between justify-content-xl-between align-items-xl-center" aria-expanded="false" data-toggle="dropdown" type="button">Number of Employees</button>
                                                                        <div class="dropdown-menu dropdown-menu-left dropdown-menu-xl-left">
                                                                            <a class="dropdown-item" href="#">First Item</a>
                                                                            <a class="dropdown-item" href="#">Second Item</a>
                                                                            <a class="dropdown-item" href="#">Third Item</a>
                                                                        </div>
                                                                    </div>
                                                                </div>*@

                                                            <div class="mb-3">
                                                                <select class="form-control" name="NumberOfEmployees" required>
                                                                    <option value="" disabled selected>Number of Employees</option>
                                                                    <option value="10 - 20" class="dropdown-item">10 - 20 </option>
                                                                    <option value="20 - 50" class="dropdown-item">20 - 50 </option>
                                                                    <option value="50 - 100" class="dropdown-item">50 - 100 </option>
                                                                </select>
                                                            </div>


                                                            <div class="mb-3"><input class="form-control" type="text" id="name-3" name="CompanyName" placeholder="Company Name"></div><!-- End: Success Example -->

                                                            <div class="mb-3"><input class="form-control" type="text" id="name-4" name="JobTitle" placeholder="Job Title"></div><!-- End: Success Example -->

                                                            <div class="mb-3"><input class="form-control" type="text" id="name-5" name="Country" placeholder="Country"></div><!-- End: Success Example -->

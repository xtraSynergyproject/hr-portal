                                            <div class="col"><img class="img-fluid" src="~/Themes/SynergySolutions/img/services-organization.jpg"></div>
                                            <div class="col"><img class="img-fluid" src="~/Themes/SynergySolutions/img/os-uibuilder.jpg"></div>
                                        </div>
                                        <div class="row mt-3">

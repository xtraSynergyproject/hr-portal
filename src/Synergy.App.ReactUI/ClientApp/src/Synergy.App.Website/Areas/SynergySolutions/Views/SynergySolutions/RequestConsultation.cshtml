                                            <div class="col"><img class="img-fluid" src="~/Themes/SynergySolutions/img/hr-collaboration.jpg"></div>
                                        </div>
                                        <div class="row mt-3 mb-3">
                                            <div class="col"><img class="img-fluid" src="~/Themes/SynergySolutions/img/ai-breakdown-prediction.jpg"></div>

<style>
    .sppb-text-success {
        color: green !important;
    }

    .sppb-text-danger {
        color: red !important;
    }

    .sppb-ajax-contact-status .sppb-text-danger, .sppb-ajax-contact-status .sppb-text-success {
        font-weight: 700;
    }

    select:invalid {
        color: #6c757d !important;
    }
    .form-control {
        display: block;
        width: 100%;
        height: calc(1.5em + 0.75rem + 0.55cm);
        padding: 0.375rem 0.75rem;
        font-size: 1rem;
        font-weight: 400;
        line-height: 2.0;
        color: #495057;

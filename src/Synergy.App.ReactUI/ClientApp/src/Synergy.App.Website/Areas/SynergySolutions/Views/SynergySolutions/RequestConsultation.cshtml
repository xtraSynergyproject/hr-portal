<script>
    let more = document.querySelectorAll('.more')
    for (let i = 0; i < more.length; i++) {
        more[i].addEventListener('click', function () {
            more[i].parentNode.classList.toggle('active')
        })
    }

    $(".text-danger").hide();

    var onAjaxSuccess = function (res) {

        if (res.success) {
            // showNotification("Email Sent Successfully");
            var html = '<span class="sppb-text-success" class="color:white;">Your consultation request has been sent successfully. Our team will contact you as soon as possible</span>';
            //$(".sppb-ajax-contact-status").html(html);
            //$(".sppb-ajax-contact-status").show();

            $(".text-danger").html(html);
            $(".text-danger").show();
            $("#myform")[0].reset();
        }
        else {
            showError1(res.error);
        }
        HideLoader($('.page-content'));
    };
    var showError1 = function (error) {
        HideLoader($('.page-content'));
        var html = '<span class="sppb-text-danger">' + error + '</span>';
        //$(".sppb-ajax-contact-status").html(html);
        //$(".sppb-ajax-contact-status").show();

        $(".text-danger").html(html);
        $(".text-danger").show();


        //alert(error);

    }
</script>

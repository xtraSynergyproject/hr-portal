<Script>
  var status = '@Html.Raw(EnumExtension.EnumToJson(typeof(StatusEnum)))';
    var statusObj = JSON.parse(status);

    var columnDefs = [
        {
            field: "TaskNo",
            cellRenderer: params => {
                
                return "<a style='cursor:pointer;color:blue;' href='javascript:OpenTask(\"" + params.data.Id + "\",\"" + params.data.TemplateMasterCode + "\");'>" + params.value + " </a>";
                //"<a target='_self' class='hover' style='cursor:pointer' onclick=\"OnEdit('# =ServiceId#')\">#=ServiceNo#</a>"

            }
        },
        { field: "TemplateName", headerName:"Task Type" },
        { field: "TaskSubject", headerName: "Task Name" },
        { field: "OwnerUserName", headerName: "Owner Name" },

        {
            field: "StartDate",
            cellRenderer: params => {

                var date = new Date(params.value);
                return date.getDate() + "/" + (date.getMonth() + 1) + "/" + date.getFullYear();
            }
        },


        { field: "TaskStatusName", headerName: "Task Status"},
        {
            field: "DueDate",
            cellRenderer: params => {

                var date = new Date(params.value);
                return date.getDate() + "/" + (date.getMonth() + 1) + "/" + date.getFullYear();
            }
        }

            ];


            $(function () {

                getTask();


            });

    function getTask() {
        document.getElementById("myGridTask").innerHTML = "";
        //var templateId = $("#TemplateId").val();
        //var projectNo = $("#ProjectNo").val();
        //var noteNo = $("#NoteNo").val();
        //var docDescription = $("#DocumentName").val();
        gridConfig(
            "myGridTask",
            "@Url.Action("ReadTaskList", "HrDirect", new { @area = "CHR", userId = Model.UserId })",
            columnDefs,
            false,
            true,
            true,
            true,
            1,
            true,
            10);
            }
</Script>

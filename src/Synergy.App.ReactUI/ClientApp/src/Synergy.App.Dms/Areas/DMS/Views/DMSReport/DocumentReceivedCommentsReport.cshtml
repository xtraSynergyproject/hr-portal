    function onApplyFilterC() {
        var template = $("#TemplateId").val();
        var discipline = $("#CommentsDiscipline").val();
        var revision = $("#CommentsRevision").val();

        var search = {

            templateId: template,
            discipline: discipline,
            revision: revision,
            fromDate: kendo.toString($("#CommentsFromDate").data("kendoDatePicker").value(), 'yyyy/MM/dd'),
            toDate: kendo.toString($("#CommentsToDate").data("kendoDatePicker").value(), 'yyyy/MM/dd'),

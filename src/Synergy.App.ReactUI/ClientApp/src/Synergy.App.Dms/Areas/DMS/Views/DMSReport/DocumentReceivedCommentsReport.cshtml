    function getData(templateId, discipline, revision) {
        document.getElementById("commentStatusGrid").innerHTML = "";
        var fromDate = kendo.toString($("#CommentsFromDate").data("kendoDatePicker").value(), 'yyyy/MM/dd');
        var toDate = kendo.toString($("#CommentsToDate").data("kendoDatePicker").value(), 'yyyy/MM/dd');

@using Kendo.Mvc.UI
@model Synergy.App.ViewModel.LoginViewModel
@using Synergy.App.Common
@{
    Layout = "~/Views/Shared/_LoginReference.cshtml";
}
<style>
   
    body {
        color: #fff !important;
    }

    .modal-content {
        width: 380px !important;
        right: -430px;
        background-color: transparent !important;
        border: none;
        top:90px;
        height:400px;
    }

    .modal-dialog {
        max-width: 880px !important;
        top: 100px;
    }

    .modal-body {
        background-color: transparent !important;
    }
     
</style>
<div id="loginModal" class="modal fade" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog  modal-login" style="background-image: url(../images/login-bg-galfar.png);background-repeat:no-repeat;">
        <div class="modal-content">

            <div class="modal-body">
                <form id="loginform" asp-action="EmailLogin" asp-controller="Account" method="post" asp-area="">
                    <div id="validation-summary"  class="text-white" asp-validation-summary="All" ></div>
                    <h5 class="pb-2" style="color:#F8F8F8;font-weight:400;">User Login</h5>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text fa fa-user" style="font-size:20px;padding-top:6px;" id="icon-email"></span>
                        </div>
                        <input asp-for="Email" class="form-control" placeholder="Email" type="text" required="required" aria-describedby="icon-email" />
                    </div>

                    <div class="row pt-2">
                        <div class="col-12">
                            @Html.HiddenFor(x => x.AuthenticateViewName)
                            @Html.HiddenFor(x => x.LoginViewName)
                            @Html.HiddenFor(x => x.PortalId)
                            @Html.HiddenFor(x => x.ReturnUrl)
                            <input type="submit" class="btn btn-primary btn-block btn-login" value="Login">
                        </div>
                        <div class="col-12 pt-2">
                            <a id="forgot-password" class="float-right" style="color:#F8F8F8;" href="/account/forgotpassword?portalId=@Model.PortalId">Forgot password?</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#loginModal').modal('show');
    }); 
</script>


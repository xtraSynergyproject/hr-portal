</div>

<script type="text/javascript">

    $(document).ready(function () {
        LoadPartailView('@Url.Action("ManagePreBusinessRule", "Template", new { @area = "cms" })?templateId=@Model.Id&type=@BusinessLogicExecutionTypeEnum.PreSubmit', $('#preaction'));

    });

    function SaveData() {
        $("#JsonCopy").val(JSON.stringify(builder.instance.schema, null, 4));
        return true;

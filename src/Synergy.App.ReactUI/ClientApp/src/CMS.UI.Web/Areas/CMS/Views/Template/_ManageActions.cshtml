        <li class="nav-item"><a data-toggle="tab" href="#customaction" class="nav-link" aria-controls="customaction" aria-selected="false" onclick=" LoadPartailView('@Url.Action("ManageCustomBusinessRule", "Template", new { @area="Cms",@templateId=Model.Id,@type=BusinessLogicExecutionTypeEnum.Custom})', $('#customaction'));">Custom Action</a></li>

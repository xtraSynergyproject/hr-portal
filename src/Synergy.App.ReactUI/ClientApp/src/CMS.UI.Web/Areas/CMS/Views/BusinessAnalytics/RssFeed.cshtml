@using Synergy.App.ViewModel;
@using Synergy.App.Common;

@{
    ViewData["Title"] = "RSS Feed";
    Layout = null;
}
<script>
    function OnDeleteConnection(/*e*/Id) {
        var flag = confirm('Do you really want to delete the Feed?');
        
      //  e.preventDefault();
       // var dataItem = this.dataItem($(e.currentTarget).closest("tr"));

        if (flag) {
            $.ajax({
                url: '@Url.Action("DeleteRssFeed", "BusinessAnalytics", new { @area="Cms"})?id=' + Id,
                type: 'POST',
                data: {},
                dataType: 'json',
                success: function (result) {
                    //
                    if (result.success) {
                     //   $("#DbConnectionGrid").data("kendoGrid").dataSource.read();
                        refreshGridview();
                        kendo.alert("Feed Deleted Successfully.");
                    } 
                },
                error: function (ert) {
                    refreshGridview();
                    //$("#DbConnectionGrid").data("kendoGrid").dataSource.read();
                }
            });
            return false;
        }
    }

    function OnEditConnection(Id) {
       // var dataItem = this.dataItem($(e.currentTarget).closest("tr"));
        var url = '/Cms/BusinessAnalytics/ManageRssFeed?id=' + Id +'&dataAction=Edit';
        var win = GetMainWindow();
        win.iframeOpenUrl = url;
        win.OpenWindow({ Title: 'RSS Feed', Width: 700, Height: 750, Position: 'Right' });
        return false;
    }
    function OnCreateConnection() {
        var url = '/Cms/BusinessAnalytics/ManageRssFeed?dataAction=Create';
        var win = GetMainWindow();
        win.iframeOpenUrl = url;
        win.OpenWindow({ Title: 'RSS Feed', Width: 700, Height: 750, Position: 'Right' });
        return false;
    }
    function refreshGridview() {
       // $("#DbConnectionGrid").data("kendoGrid").dataSource.read();
        getRssFeedData();
    }

    $(document).ready(function () {

        getRssFeedData();

    });


    var columnDefs1 = [
        {
            field: "Id",
            headerName: "Action",
            cellRenderer: params => {
                return "<i class='fa fas fa-pencil' onclick='OnEditConnection(\"" + params.data.Id + "\")'></i>&nbsp;&nbsp;<i class='fa fas fa-trash' onclick='OnDeleteConnection(\"" + params.data.Id + "\")'></i>";
            }
        },

        {
            field: "NoteSubject",

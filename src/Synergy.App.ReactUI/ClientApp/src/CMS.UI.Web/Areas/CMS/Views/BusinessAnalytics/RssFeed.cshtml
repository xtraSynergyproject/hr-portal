        },
        {
            field: "NoteDescription",
            headerName: "Description"

        },
        {
            field: "feedName",
            headerName: "Feed Name"
        },
        {
            field: "feedUrl",
            headerName: "Feed Url"
        },


    ];



    function getRssFeedData() {
        document.getElementById("DbConnectionGrid").innerHTML = "";

        gridConfig(
            "DbConnectionGrid",
            "/Cms/BusinessAnalytics/ReadRssFeedData",
            columnDefs1,
            false,
            true,
            true,
            true,
            1,
            true,
            10);
    }
</script>



@using Synergy.App.ViewModel;
@using Synergy.App.Common;

@model CompanySettingViewModel

@{
    ViewData["Title"] = "Company Setting";
    Layout = null;
}
<script>
   var status = '@Html.Raw(EnumExtension.EnumToJson(typeof(StatusEnum)))';
    var statusObj = JSON.parse(status);

    var columnDefs = [
        {
            headerName: "Actions",
            field: "Id",
            cellRenderer: params => {
                return "<div class='btn-group grid-menu' id='tree-menuCompanySetting' data-idvalue='" + params.value + "' data-status=\"0\" data-noteid=\"#:NoteId#\"><i class='fas fa-ellipsis-v'></i></div>"
            }
        },
        {
            field: "Name",
        },
        { field: "Code" },
        { field: "Value" },


        //{
        //    field: "Address",
        //    cellRenderer: params => {
        //        return statusObj[params.value]; //only for enum
        //    }
        //},
        //{
        //    headerName: "Actions",
        //    field: "Id",
        //    cellRenderer: params => {
        //        return "<div class='btn-group grid-menu' id='tree-menuBinCompany' data-idvalue='" + params.value + "' data-status=\"0\" data-noteid=\"#:NoteId#\"><i class='fas fa-ellipsis-v'></i></div>"
        //    }
        //}
    ];

    $(function () {

        getDataCompanySetting();

        //$.contextMenu('update');
        //$('.context-menu-list').trigger('contextmenu:refresh');

        $.contextMenu({
            selector: '#tree-menuCompanySetting',
            trigger: 'left',
            build: function ($trigger, e) {


                var id = $trigger.data('idvalue');

                //var portalName = $trigger.data('portal-name');

                switch (0) {
                    case 0:
                        return {
                            callback: function (key, options) {
                                switch (key) {
                                    case 'edit':
                                        onEdit(id);
                                        break;

                                    case 'delete':
                                        OnDelete(id);
                                        break;

                                    default:
                                }
                            },
                            items: {
                                "edit": { name: "Edit", icon: "fas fa-edit" },
                                "delete": { name: "Delete", icon: "fas fa-trash" },


                            }
                        };


                }
            }
        });


    });
  function OnCreateCompanySetting() {
       
         var win = GetMainWindow();
        win.iframeOpenUrl =  '@Url.Action("CreateCompanySetting", "Company", new { @area = "" })';
        win.OpenWindow({ Title: 'Manage Company Setting', Width: 600, Height: 600 });
        return false;

        }

        function onEdit(id) {
        var win = GetMainWindow();
        win.iframeOpenUrl =  '@Url.Action("EditCompanySetting", "Company", new { @area = "" })?Id=' + id;
        win.OpenWindow({ Title: 'Manage Company Setting', Width: 600, Height: 600 });
        return false;
        }

        function OnDelete(id) {
        var flag = confirm('Do you really want to delete the Company Setting?');

        if (flag) {
        $.ajax({
        url:'@Url.Action("DeleteCompanySetting", "Company", new { @area = "" })?Id=' + id,
        type: 'POST',
        data: {},
        dataType: 'json',
        success: function (result) {
        
        if (result.success) {
        getDataCompanySetting();
        kendo.alert("Company Setting Deleted Successfully.");
        } else {
        getDataCompanySetting();
        var err = result.errors.BinderCountError.errors[0];
        kendo.alert(err);
        }
        },
        error: function (ert) {
        getDataCompanySetting();
        }
        });
        return false;
        }
        }

        function getDataCompanySetting() {
        document.getElementById("myGridCompanySetting").innerHTML = "";
        gridConfig(
        "myGridCompanySetting",
        "/company/ReadCompanySettingData",
        columnDefs,
        false,
        true,
        true,
        true,
        1,
        true,
        10);
        }

        </script>

        <div>
            <h4>@ViewBag.Title</h4>

            <hr />


            <div class="row">
                <div class="col-12">
                    <button type='button' class='btn btn-primary' onclick='OnCreateCompanySetting();'><i class='fa fas fa-plus'></i>&nbsp;Create Company Setting</button>
                    <br /><br />
                    <div id="myGridCompanySetting" style="width: 100%;height:550px" class="ag-theme-alpine"></div>
                </div>
            </div>
        </div>

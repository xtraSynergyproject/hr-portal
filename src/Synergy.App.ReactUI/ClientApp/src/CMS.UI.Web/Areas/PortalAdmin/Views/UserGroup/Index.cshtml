            }
        });


    }
    $(function () {
        $.contextMenu({
            selector: '#groupgrid-menu',
            trigger: 'left',
            build: function ($trigger, e) {

                console.log($trigger);
                var id = $trigger.data('idvalue');
                var status = 0;


                switch (status) {
                    case 0:
                        return {
                            callback: function (key, options) {
                                switch (key) {
                                    case 'edit':
                                        OnEditUserGroup(id);
                                        break;
                                    case 'del':
                                        OnDeleteUserGroup(id);
                                        break;

                                    default:
                                }
                            },
                            items: {
                                "edit": { name: "@Html.Raw(SharedResource["Edit"])", icon: "fas fa-pencil" },
                                "del": { name: "@Html.Raw(SharedResource["Delete"])", icon: "fas fa-trash" },


                            }
                        };


                }
            }
        });

    });
</script>



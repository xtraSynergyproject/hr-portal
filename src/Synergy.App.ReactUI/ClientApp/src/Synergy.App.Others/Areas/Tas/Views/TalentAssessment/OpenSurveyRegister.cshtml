<script>

    $(document).ready(function () {

    $("#OrganizationId").kendoDropDownList({
            dataTextField: "Name",
            dataValueField: "Id",
            optionLabel: "@ApplicationConstant.PlaceHolder_SelectOption",
            filter: "contains",
            change: OnChangeOrg,
            dataSource: {
                serverFiltering: true,
                transport: {
                    read: {
                        url: "/Cms/LOV/GetListOfValueList?type=SURVEY_ORGANIZATION",
                    }
                }
            }
    });

    });

    function OnChangeOrg() {
        var org = $("#OrganizationId").val();

        var url = "/Cms/LOV/GetLOVDetailsByid";
            $.ajax({
                url: url,
                type: "GET",
                data: { 'Id': org },
                success: function (data) {
                    
                    if (data.Code == "أخرى") {
                        $("#neworg").show();
                        $("#OtherOrg").val("Other");
                        
                    } else {
                        document.getElementById('NewOrganization').value = "";
                        $("#neworg").hide();
                        $("#OtherOrg").val("");
                    }
                }
            });

    }

    const validateEmail = (email) => {
        return email.match(
        /^(([^<>()[\]\\.,;:\s@@\"]+(\.[^<>()[\]\\.,;:\s@@\"]+)*)|(\".+\"))@@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/
        );
    };

    function OnSubmit(e) {        

        var org = $("#OrganizationId").val();
        var orgName = $("#NewOrganization").val();
        var other = $("#OtherOrg").val();

        if (org == null || org == '' || org == undefined) {
            ShowNotification("Please Select Organization.", "error");
            e.preventDefault();
            return false;
        }
        else if ((orgName == null || orgName == "") && other=="Other") {            
            ShowNotification("Enter Organization Name", "error");
            e.preventDefault();
            return false;
        }
        else {
            ShowLoader($("#surveyRegister"));

            var url = "/TAS/TalentAssessment/OpenSurveyRegister";
            $.ajax({
                url: url,
                type: "POST",
                data: { 'surveyScheduleId': '@Model.SurveyScheduleId', 'orgId': org, 'orgName': orgName},
                success: function (data) {

                    if (data.success) {
                        window.location.href = data.surveylink;
                    } else {
                        HideLoader($("#surveyRegister"));
                        kendo.alert(data.error);
                    }
                }
            });
        }



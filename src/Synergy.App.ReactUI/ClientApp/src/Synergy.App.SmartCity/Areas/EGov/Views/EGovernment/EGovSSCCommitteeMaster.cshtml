@using Synergy.App.ViewModel;
@using Synergy.App.Common;
@*@using Kendo.Mvc.UI;*@
@using Newtonsoft.Json;

@{
    Layout = null;
    //Layout = "~/Areas/Core/Views/Shared/_PopupLayout.cshtml";
}

@model EGOVCommitteeMasterViewModel

<style>
    table, th, td {
        border: 1px solid black;
    }

    table {
        width: 100%;
    }

    td {
        padding-left: 8px;
        padding-right: 8px;
        padding-top: 8px;
        padding-bottom: 8px;
    }
</style>

<div class="row no-gutters">
    <div class="col-12 pb-1 pt-3">
        <h4>@Model.CommitteeTitle</h4>
    </div>
    <br />
    <div class="container">
        <div class="row">
            <div class="col-12" style="padding-top:10px;padding-bottom:25px;">
                @*<img src="~/images/EGOV/srinagarcity.jpg" alt="About Us" style="width:100%;height:350px;">*@
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <h5 style="text-align:left;"><u></u></h5>
                <table>
                    <tr>
                        <td width="30%"><b>Name of Committee</b></td>
                        <td colspan="2"><b>@Model.CommitteeName</b></td>
                    </tr>
                    <tr>
                        <td><b>Constituted under</b></td>
                        <td colspan="2"><b>@Model.ConstitutedUnder</b></td>
                    </tr>
                    <tr>
                        <td rowspan="@(Model.CommitteeMemberList.Count+1)" style="vertical-align:top;"><b>Name of Hon’ble Members</b></td>
                        <td><b>Name</b></td>
                        <td><b>Designation</b></td>
                    </tr>
                    @if (Model.CommitteeMemberList.Count > 0)
                    {
                        foreach (var item in Model.CommitteeMemberList)
                        {
                            <tr>
                                @if(item.MemberSequenceNo==1){
                                <td><b>@item.MemberName</b></td>
                                <td><b>@item.MemberDesignation</b></td>
                                }else{
                                <td>@item.MemberName</td>
                                <td>@item.MemberDesignation</td>
                                }
                            </tr>
                        }
                    }

                    <tr>
                        <td rowspan="@(Model.CommitteeFunctionList.Count+1)" style="vertical-align:top;"><b>Functions of Committee</b></td>

                        <td colspan="2" style="text-align:justify;">
                            @if (Model.CommitteeFunctionList.Count > 0)
                            {
                                foreach (var item in Model.CommitteeFunctionList)
                                {
                                        if(item.FunctionSequenceNo==1){
                                                @item.CommitteeFunction
                                        }
                                }
                            }
                        </td>
                    </tr>
                    @if (Model.CommitteeFunctionList.Count>0)
                    {
                        foreach (var item in Model.CommitteeFunctionList)
                        {
                            if(item.FunctionSequenceNo!=1){
                                <tr>
                                    <td colspan="2" style="text-align:justify;">
                                            @item.CommitteeFunction
                                    </td>
                                </tr>
                            }

                        }
                    }
                </table>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <p>&nbsp;</p>
            </div>
        </div>
    </div>
</div>	
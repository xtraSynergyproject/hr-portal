@using Synergy.App.DataModel
@using Synergy.App.ViewModel
@*@using Kendo.Mvc.UI*@



<script>

    function getDetails() {
        var val = $("#txtPropertySearch").val();

        $('#Pay_content').load('@Url.Action("GetPropertyTaxDetails", "PayPropertyTax",new  { @Area= "Property" })?PropertyId=' + val);
    }
</script>
<div style="padding:10px;margin-top:20px;">

    <div class="row">
        <div class="d-flex justify-content-center col-12" style="padding-bottom:10px">

            <label style="padding-right:5px;font-size:16px;">Property ID:</label>
            @*@(Html.Kendo().TextBox().Name("txtPropertySearch").HtmlAttributes(new { style = "width: 30%;" }))*@
            <input type="text" name="txtPropertySearch" class="form-control" style="width:30%" />&nbsp;&nbsp;
            <input type="button" style="padding-left:5px" class="btn btn-primary" value="Search" onclick="getDetails();" />
        </div>
           

       

    </div>
    <div class="d-flex justify-content-center col-12">
        <a href="#" style="text-decoration:underline;font-weight:bold">If you dont know Property ID Click Here to Search</a>

    </div>

    <div id="Pay_content" style="padding-top:10px">

    </div>

</div>










@inject IStringLocalizer<CMS.UI.Web.Areas.Pms.Controllers.PerformanceDocumentController> Resource

@using Synergy.App.ViewModel;
@using Synergy.App.Common;
@*@using Kendo.Mvc.UI;*@

@{
    ViewData["Title"] = "Manage Competency Category";
    Layout = "~/Areas/Core/Views/Shared/_PopupLayout.cshtml";
}

@model CompetencyCategoryViewModel

<style>
    .form-control {
        width: unset;
    }

    .required {
        color: red;
    }
</style>

<script type="text/javascript">

    $(document).ready(function () {
        HideLoader($("#global-overlay"));
        $("#ParentNoteId").kendoDropDownList({
            dataTextField: "Name",
            dataValueField: "Id",
	        optionLabel:'@ApplicationConstant.PlaceHolder_SelectOption',
            value:'@Model.ParentNoteId.ToString()',
            dataSource:
            {
                transport:
                {
                    read:
                    {
                        url: "/PMS/PerformanceDocument/GetParentCompetencyCategory",
                    }
                }
            }
        });
    });

    function Close() {
    
        var win = GetMainWindow();
        win.CloseWindow();
        return false;
    }

    function OnSave(evt) {


        ShowLoader($('.form-horizontal'));
        if ($("#Tag").val() == "") {
            $(".text-danger").removeClass("validation-summary-valid");
            $(".text-danger").addClass("validation-summary-errors");
            $(".text-danger").html("Tag Category Type is required");
            HideLoader($('.form-horizontal'));
            evt.preventDefault();
            return false;
        }

        else {
            $(".text-danger").removeClass("validation-summary-errors");
            $(".text-danger").addClass("validation-summary-valid");
            $(".text-danger").html("");
        }
    }

    var onAjaxSuccess = function (res) {
        debugger;
        HideLoader($('.form-horizontal'));
        if (res.success) {
            if ('@Model.DataAction'=='@DataActionEnum.Create')
            {
                window.parent.ShowNotification("Saved Successfully", "success");
            }
            if ('@Model.DataAction'=='@DataActionEnum.Edit')
            {
                window.parent.ShowNotification("Updated Successfully", "success");
            }

            Close();
            window.parent.$("#kgrdTagCategory").data("kendoTreeList").dataSource.read();
            //window.parent.parent.$("#kgrdTag").data("kendoGrid").dataSource.read({TagCategoryId: 'fkdjhfkj' });
            ///var win = GetMainWindow();
            ///win.CloseWindow({ MethodName: 'OnAfterTagCreate' });
           return false;

        }
        else {
            $(".text-danger").removeClass("validation-summary-valid");
            $(".text-danger").addClass("validation-summary-errors");
            $(".text-danger").html(res.error);
       }
    };





</script>

<div class="row" style="margin-left:15px;">

    <form asp-controller="PerformanceDocument" asp-action="ManageCompatencyCategory" class="form-horizontal" id="myForm" data-ajax-begin="onAjaxBegin" data-ajax-complete="onAjaxComplete"
          data-ajax-failure="onAjaxFailed" data-ajax-success="onAjaxSuccess"
          data-ajax="true" data-ajax-method="POST">
        <div class="text-danger" asp-validation-summary="All" style="font-size:14px;"></div>
        <div class="row" style="padding:10px;">

            @Html.HiddenFor(x => x.NoteId);
            <div class="col-12 pad-10">
                <div class="form-label-group">

                    <input asp-for="CategoryName" type="text" class="form-control" placeholder="@Resource["CategoryName"]" required="required" autocomplete="off" style="width:80%" />
                    <label for="CategoryName">@Resource["CategoryName"] <span class="required">*</span></label>
                </div>
            </div>

            <div class="col-12 pad-10">
                <div class="form-label-group">

                    <input asp-for="CategoryCode" type="text" class="form-control" placeholder="@Resource["CategoryCode"]" required="required" autocomplete="off" style="width:80%" />
                    <label for="CategoryCode">@Resource["CategoryCode"] <span class="required">*</span></label>
                </div>
            </div>

            <div class="col-12 pad-10">
                <div class="form-label-group">

                    <textarea asp-for="CategoryDescription" type="text" class="form-control" placeholder="@Resource["CategoryDescription"]" required="required" autocomplete="off" style="width:80%"></textarea>
                    <label for="CategoryCode">@Resource["CategoryDescription"]<span class="required">*</span></label>
                </div>
            </div>


            <div class="col-12"> @Resource["ParentCompetencyCategory"] <span class="required"></span></div>
            <div class="col-12 pad-15">
                @*@(Html.Kendo().DropDownListFor(x=>x.ParentNoteId)
        .DataTextField("Name")
        .DataValueField("Id")
        .DataSource(source =>
        {
            source.Read(read =>
            {
                read.Action("GetParentCompetencyCategory", "PerformanceDocument", new { @area = "Pms" });
            });
        })
        .OptionLabel(ApplicationConstant.PlaceHolder_SelectOption)
        .Value(Model.ParentNoteId.ToString())
        .HtmlAttributes(new { @class = "form-control", @style = "width:80%" })
        )*@
                <input asp-for="ParentNoteId" id="ParentNoteId" class="form-control" style = "width:80%" />
            </div>


            <div class="col-12 pad-10" style="text-align:right;padding-right:40px;">
                <button type="button" class="btn btn-light" onclick="Close();">@SharedResource["Close"]</button>
                <input type="submit" class="btn btn-primary" value="@SharedResource["Save"]" id="submitBtn" onclick="OnSave(event);" />
            </div>

        </div>
        @Html.HiddenFor(x => x.Id)
        @Html.HiddenFor(x => x.DataAction)
        @Html.HiddenFor(x => x.NoteId)
    </form>
</div>



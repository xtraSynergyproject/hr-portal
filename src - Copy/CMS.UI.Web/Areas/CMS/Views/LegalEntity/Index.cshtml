            }
        }
    ];

    $(function () {

        getLegalEntityData();
        $.contextMenu({
            selector: '#tree-menu1',
            trigger: 'left',
            build: function ($trigger, e) {


                var id = $trigger.data('idvalue');

                //var portalName = $trigger.data('portal-name');

                switch (0) {
                    case 0:
                        return {
                            callback: function (key, options) {
                                switch (key) {
                                    case 'edit':
                                        OnEditLegalEntity(id);
                                        break;

                                    case 'delete':
                                        OnDeleteLegalEntity(id);
                                        break;

                                    default:
                                }
                            },
                            items: {
                                "edit": { name: "Edit", icon: "fas fa-edit" },
                                "delete": { name: "Delete", icon: "fas fa-trash" },


                            }
                        };


                }
            }
        });


    });

    function getLegalEntityData() {
        document.getElementById("LegalEntitygrid").innerHTML = "";
        gridConfig(
            "LegalEntitygrid",
            "/cms/LegalEntity/ReadLegalEntityData",
            columnDefs,
            false,
            true,
            true,
            true,
            1,
            true,
            10);
    }
</script>
<script>
        function OnDeleteLegalEntity(id) {
        var flag = confirm('Do you really want to delete the Legal Entity?');
        //alert("..Delete");
      //  e.preventDefault();
       // var dataItem = this.dataItem($(e.currentTarget).closest("tr"));

        if (flag) {
            $.ajax({
                url: '@Url.Action("Delete", "LegalEntity", new { @area = "Cms" })?Id=' + id,
                type: 'POST',
                data: {},
                dataType: 'json',
                success: function (result) {
                    //
                    if (result.success) {
                        getLegalEntityData();
                       // $("#LegalEntitygrid").data("kendoGrid").dataSource.read();
                        kendo.alert("Legal Entity Deleted Successfully.");
                    } else {
                        getLegalEntityData();
                        //$("#LegalEntitygrid").data("kendoGrid").dataSource.read();
                        var err = result.errors.BinderCountError.errors[0];
                        kendo.alert(err);
                    }
                },
                error: function (ert) {
                    getLegalEntityData();
                   // $("#LegalEntitygrid").data("kendoGrid").dataSource.read();
                }
            });
            return false;
        }
    }



</script>


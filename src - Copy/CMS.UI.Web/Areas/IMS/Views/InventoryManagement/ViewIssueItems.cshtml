<div class="row  pad-10 no-gutters page-content">
    
             
                <div style="margin-top: 5px;padding-left: 20px;padding-right: 20px;width: 100%;">

                
                    <legend>Issued Items</legend>
                    <div class="row">

                        <div class="col-12">
                            <div id="RequisitionIssuedItemsGrid" style="width: 100%;height:550px" class="ag-theme-alpine"></div>
                        </div>
                    </div>
                </div>
            
           
     
    
</div>
<script>
    $("#RequisitionIssuedItemsGrid").jsGrid({
        width: "100%",
        height: "auto",
        //data: response,
        autoload: true,
        controller: {
            loadData: function (filter) {

                return $.ajax({
                    type: "GET",
                    url: "/IMS/InventoryManagement/ReadIssuedItems?serviceId=@ViewBag.RequisitionIssueId",
                    data: filter,
                    dataType: "json"
                });
            },

            //deleteItem: function (item) {
            //    onDeleteItem(item.NoteId);
            //}
        },
        fields: [


            {
                name: "ItemName",
                title: "Item Name",
                type: "text",

            },
            {
                name: "ItemSpecification",
                title: "Item Specification",
                type: "text",

            },
            {
                name: "IssuedQuantity",
                title: "IssuedQuantity",
                type: "text",

            },
        ]
    })
</script>


@using CMS.UI.ViewModel;
@using Kendo.Mvc.UI;
@using CMS.Common;
@using Kendo.Mvc.Extensions;
@model EGovCorporationWardViewModel
@{
    ViewData["Title"] = "Know Your Corporator";
    //Layout = "/Views/Shared/_PopupLayout.cshtml";
   // Layout = "/Areas/Cms/Views/Shared/_LayoutCms.cshtml";
    Layout = null;

}
<style>
    .kgrdPDMS {
        width: 100% !important;
    }
</style>
<script type="text/javascript">

    var columnDefs = [
        {
            headerName: "WardNo",
            field: "WardNo",
        },
        {
            headerName: "WardName",
            field: "WardName",
        },

        {
            headerName: "Electoral Ward No. & Name",
            field: "ElectoralWardName",
        },

        {
            headerName: "Assembly Constituency No.& Name",
            field: "ConstituencyName",
        },
        {
            headerName: "Location",
            field: "Location",
        },
        {
            headerName: "Longitude",
            field: "Longitude",

        },

        {
            headerName: "Latitude",
            field: "Latitude",
        },

    ];

    $(function () {

        getAdminWardData("","","","","","","","");

    });

    function getAdminWardData(wardno, wardName, constituencyName, electoralWardName, location, longitude, latitude) {
        document.getElementById("kgrdAdminWardGrid").innerHTML = "";
        gridConfig(
            "kgrdAdminWardGrid",
            "/EGov/EGovernment/GetAdminWard?wardNo=" + wardno + "&wardName=" + wardName + "&electoralWardName=" + electoralWardName + "&location=" + location + "&constituencyName=" + constituencyName + "&latitude=" + latitude + "&longitude=" + longitude,
            columnDefs,
            false,
            true,
            true,
            true,
            1,
            true,
            10);
    }

    function onSearch() {
        var wardno = $("#wardNo").val();
        var wardName = $("#wardName").val();
        var constituencyName = $("#constituencyName").val();
        var electoralWardName = $("#electoralWardName").val();
        var location = $("#location").val();
        var longitude = $("#longitude").val();
        var latitude = $("#latitude").val();
        getAdminWardData(wardno, wardName, constituencyName, electoralWardName, location, longitude, latitude);
    }

    function onReset() {
        
        getAdminWardData("", "", "", "", "", "", "", "");
    }

</script>

<div class="panel panel-default">
    <div class="panel-heading" data-toggle="collapse" href="#search" style="background-color: #2D9FCA;color:#FFFFFF">
       "Filter"  <span id="filtertext"></span>
    </div>
    <div class="panel-collapse collapse" id="search">
        <div id="filter" role="group" style="width:100%;color:#FFFFFF;background: #17a2b8;padding: 5px;">
            <div class="row" style="padding-top:10px;">


                <div class="col-3">
                    Ward No. <br />
                    <input id="wardNo" class="hr-x-large search-control" />
                </div>
                <div class="col-3">
                    Ward Name <br />
                    <input id="wardName" class="hr-x-large search-control" />
                </div>
                <div class="col-3">
                    Constituency Name <br />
                    <input id="constituencyName" class="hr-x-large search-control" />
                </div>
                <div class="col-3">
                    Electoral Ward No/Name <br />
                    <input id="electoralWardName" class="hr-x-large search-control" />
                </div>
                <div class="col-3">
                    Location <br />
                    <input id="location" class="hr-x-large search-control" />
                </div>
                <div class="col-3">
                    Longitude <br />
                    <input id="longitude" class="hr-x-large search-control" />
                </div>
                <div class="col-3">
                    Latitude <br />
                    <input id="latitude" class="hr-x-large search-control" />
                </div>
            </div>
           
            <div class="row">
                <div class=" col-md-12">
                    <br />
                    <button class="btn btn-warning" onclick="onSearch()">"Search"</button>
                    <button class="btn btn-danger" onclick="onReset()">"Reset"</button>
                 </div>
            </div>
        </div>
    </div>
</div>

<div class="row" style="padding:10px;margin-top:20px;">

        <div class="col-md-12" style="margin-top:7px;" id="gridDiv">
            
            <div id="kgrdAdminWardGrid" style="width: 100%;height:550px" class="ag-theme-alpine"></div>

          
        </div>
</div>


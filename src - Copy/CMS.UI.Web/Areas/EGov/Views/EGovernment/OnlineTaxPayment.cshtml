<Script>
  var status = '@Html.Raw(EnumExtension.EnumToJson(typeof(StatusEnum)))';
    var statusObj = JSON.parse(status);

    var columnDefs = [
        {
            field: "ServiceNo",
            cellRenderer: params => {
                debugger;
                return "<a style='cursor:pointer;color:blue;' href='javascript:OpenService(\"" + params.data.Id + "\",\"" + params.data.TemplateCode + "\");'>" + params.value + " </a>";
                //"<a target='_self' class='hover' style='cursor:pointer' onclick=\"OnEdit('# =ServiceId#')\">#=ServiceNo#</a>"

            }
        },
       
        { field: "ServiceSubject", headerName: "Service Subject" },

        {
            field: "DueDate", headerName:"Due Date",
            cellRenderer: params => {

                var date = new Date(params.value);
                return date.getDate() + "/" + (date.getMonth() + 1) + "/" + date.getFullYear();
            }
        },


        { field: "ServiceStatusName", headerName: "Service Status"},
       
        { field: "BillAmount", headerName: "Bill Amount" },
        {
            field: "Id", headerName: " " ,
            cellRenderer: params => {
                debugger;
                return "<button class='btn btn-primary'>Pay</button>";
                //"<a target='_self' class='hover' style='cursor:pointer' onclick=\"OnEdit('# =ServiceId#')\">#=ServiceNo#</a>"

            }
        },

            ];


            $(function () {

                getService();


            });

    function getService() {
        document.getElementById("myGridService").innerHTML = "";

        gridConfig(
            "myGridService",
            "@Url.Action("ReadServiceDetail", "EGovernment", new { @area = "EGOV", templateCode=Model.TemplateCode })",
            columnDefs,
            false,
            true,
            true,
            true,
            1,
            true,
            10);
            }
</Script>
